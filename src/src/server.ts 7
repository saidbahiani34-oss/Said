import express from "express";
import { createServer as createViteServer } from "vite";
import fs from "fs";
import path from "path";

const SETTINGS_FILE = path.join(process.cwd(), "telegram-settings.json");
const STATE_FILE = path.join(process.cwd(), "bot-state.json");

let savedSettings = { token: '', chatId: '' };
try {
  if (fs.existsSync(SETTINGS_FILE)) {
    savedSettings = JSON.parse(fs.readFileSync(SETTINGS_FILE, 'utf-8'));
  }
} catch (e) {}

interface Signal {
  id: string;
  traderName: string;
  successRate: string;
  time: string;
  pair: { base: string; quote: string };
  action: 'buy' | 'sell';
  entry: string;
  stopLoss: string;
  takeProfits: { t1: string; t2: string; t3: string };
  analysis: string;
  halalStatus?: 'halal' | 'haram' | 'doubtful' | 'unknown';
}

const getHalalStatus = (coin: string): 'halal' | 'haram' | 'doubtful' | 'unknown' => {
  const halalCoins = ['BTC', 'ETH', 'SOL', 'ADA', 'DOT', 'MATIC', 'LINK', 'AVAX', 'LTC', 'ATOM', 'NEAR', 'ALGO', 'INJ', 'RNDR', 'FET', 'GRT', 'OP', 'ARB', 'SUI', 'APT', 'FTM', 'SAND', 'MANA', 'GALA', 'ENJ', 'ROSE', 'KAS', 'TIA', 'SEI', 'XLM', 'HBAR', 'VET', 'QNT', 'ASTR', 'IMX', 'STX', 'EGLD', 'FLOW', 'THETA', 'AXS', 'CHZ', 'MINA', 'COMP', 'SNX', 'CRV', 'CAKE', 'XVS', 'GMX', 'LDO', 'FXS', 'PENDLE', 'TORN'];
  const haramCoins = ['AAVE', 'COMP', 'MKR', 'SNX', 'CRV', 'CAKE', 'XVS', 'CHZ', 'RLB', 'GMX', 'LDO', 'FXS', 'PENDLE', 'TORN'];
  const doubtfulCoins = ['XRP', 'BNB', 'DOGE', 'SHIB', 'PEPE', 'WLD', 'FLOKI', 'BONK'];

  if (halalCoins.includes(coin) && !haramCoins.includes(coin)) return 'halal';
  if (haramCoins.includes(coin)) return 'haram';
  if (doubtfulCoins.includes(coin)) return 'doubtful';
  return 'unknown';
};

const getHalalText = (status?: string) => {
  if (status === 'halal') return 'Ø­Ù„Ø§Ù„ ğŸŸ¢';
  if (status === 'haram') return 'Ø­Ø±Ø§Ù… ğŸ”´';
  if (status === 'doubtful') return 'Ø´Ø¨Ù‡Ø© ğŸŸ¡';
  return 'ØºÙŠØ± Ù…Ø­Ø¯Ø¯ âšª';
};

let botState = {
  signals: [] as Signal[],
  prices: {} as Record<string, number>,
  signalStatus: {} as Record<string, 'active' | 't1' | 't2' | 't3' | 'sl'>,
  traderStats: {
    'RSI Oversold (1h)': { wins: 0, total: 0 },
    'Volume Breakout (1h)': { wins: 0, total: 0 }
  },
  telegramToken: process.env.TELEGRAM_BOT_TOKEN || savedSettings.token || '',
  telegramChatId: process.env.TELEGRAM_CHAT_ID || savedSettings.chatId || '',
  isLive: true,
};

try {
  if (fs.existsSync(STATE_FILE)) {
    const savedState = JSON.parse(fs.readFileSync(STATE_FILE, 'utf-8'));
    if (savedState.signals) {
      const uniqueSignals: Signal[] = [];
      for (const signal of savedState.signals) {
        const lastSignal = uniqueSignals.find(s => s.pair.base === signal.pair.base);
        if (!lastSignal) {
          uniqueSignals.push(signal);
        } else {
          const timeDiff = Math.abs(parseInt(signal.id.split('-')[1]) - parseInt(lastSignal.id.split('-')[1]));
          if (timeDiff > 60 * 60 * 1000) {
            uniqueSignals.push(signal);
          }
        }
      }
      botState.signals = uniqueSignals;
    }
    if (savedState.signalStatus) botState.signalStatus = savedState.signalStatus;
    if (savedState.traderStats) botState.traderStats = savedState.traderStats;
  }
} catch (e) {}

const saveState = () => {
  try {
    const stateToSave = {
      signals: botState.signals,
      signalStatus: botState.signalStatus,
      traderStats: botState.traderStats
    };
    fs.writeFileSync(STATE_FILE, JSON.stringify(stateToSave));
  } catch (e) {}
};

const sendToTelegram = async (message: string) => {
  const token = (botState.telegramToken || '').trim();
  const chatId = (botState.telegramChatId || '').trim();
  
  if (!token || !chatId) return;
  
  try {
    const url = `https://api.telegram.org/bot${token}/sendMessage`;
    await fetch(url, {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify({ 
        chat_id: chatId, 
        text: message, 
        parse_mode: "HTML",
        disable_web_page_preview: true
      }),
    });
  } catch (err) {}
};

const calculateRSI = (closes: number[], period = 14) => {
  if (closes.length <= period) return 50;
  let gains = 0, losses = 0;
  for (let i = 1; i <= period; i++) {
    const change = closes[i] - closes[i - 1];
    if (change > 0) gains += change;
    else losses -= change;
  }
  let avgGain = gains / period;
  let avgLoss = losses / period;
  
  for (let i = period + 1; i < closes.length; i++) {
    const change = closes[i] - closes[i - 1];
    const gain = change > 0 ? change : 0;
    const loss = change < 0 ? -change : 0;
    avgGain = (avgGain * (period - 1) + gain) / period;
    avgLoss = (avgLoss * (period - 1) + loss) / period;
  }
  
  if (avgLoss === 0) return 100;
  const rs = avgGain / avgLoss;
  return 100 - (100 / (1 + rs));
};

let isFetchingSignals = false;
