      let isDuplicate = false;
      try {
        if (fs.existsSync(STATE_FILE)) {
          const latestState = JSON.parse(fs.readFileSync(STATE_FILE, 'utf-8'));
          if (latestState.signals) {
            const recentSignal = latestState.signals.find((s: Signal) => 
              s.pair.base === signal.pair.base && 
              Math.abs(parseInt(s.id.split('-')[1]) - parseInt(signal.id.split('-')[1])) < 60 * 60 * 1000
