import React, { useState, useEffect, useRef } from 'react';
import { User, Zap, ShieldAlert, Target, TrendingUp, Clock, Activity, Send, Loader2, Settings, X } from 'lucide-react';

interface Signal {
  id: string;
  traderName: string;
  successRate: string;
  time: string;
  pair: { base: string; quote: string };
  action: 'buy' | 'sell';
  entry: string;
  stopLoss: string;
  takeProfits: { t1: string; t2: string; t3: string };
  analysis: string;
  halalStatus?: 'halal' | 'haram' | 'doubtful' | 'unknown';
}

const getHalalBadge = (status?: string) => {
  if (status === 'halal') return <span className="px-2 py-0.5 bg-green-500/10 text-green-400 text-xs rounded-full border border-green-500/20">Ø­Ù„Ø§Ù„ ğŸŸ¢</span>;
  if (status === 'haram') return <span className="px-2 py-0.5 bg-red-500/10 text-red-400 text-xs rounded-full border border-red-500/20">Ø­Ø±Ø§Ù… ğŸ”´</span>;
  if (status === 'doubtful') return <span className="px-2 py-0.5 bg-yellow-500/10 text-yellow-400 text-xs rounded-full border border-yellow-500/20">Ø´Ø¨Ù‡Ø© ğŸŸ¡</span>;
  return null;
};

